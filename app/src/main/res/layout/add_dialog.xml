<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/base_50">

    <LinearLayout
        android:id="@+id/layoutIncome"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/base_50"
            android:contentDescription="@string/add_income"
            android:src="@drawable/sync"
            app:tint="@color/base_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/base_50"
            android:backgroundTint="@color/base_50"
            android:fontFamily="@font/poppins"
            android:text="@string/add_income"
            android:textSize="16sp"
            android:textColor="@color/base_700"
            app:drawableTint="@color/base_50" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutExpense"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/layoutIncome"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/base_50"
            android:contentDescription="@string/add_expense"
            android:src="@drawable/expense"
            app:tint="@color/base_900" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@color/base_50"
            android:backgroundTint="@color/base_50"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:text="@string/add_expense"
            android:textColor="@color/base_700"
            app:drawableTint="@color/base_50" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>